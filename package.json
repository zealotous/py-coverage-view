{
    "name": "py-coverage-view",
    "displayName": "py-coverage-view",
    "description": "Displays (Python) code coverage results on the editor.",
    "version": "0.1.2",
    "publisher": "rduldulao",
    "homepage": "https://github.com/rduldulao/py-coverage-view",
    "repository": {
        "type": "git",
        "url": "https://github.com/rduldulao/py-coverage-view.git"
    },
    "engines": {
        "vscode": "^1.27.0"
    },
    "keywords": ["multi-root ready"],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:python"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "pycoveragedisplay.runPytestCov",
            "title": "Python: Run Pycov-test"
        }],
        "configuration": {
            "type": "object",
            "title": "Coverage.py Editor Highlighter",
            "properties": {
                "python.coveragepy.file": {
                    "type": "string",
                    "default": ".coverage",
                    "description": "Coverage.py outputfile (usually .coverage)",
                    "scope": "resource"
                },
                "python.coveragepy.cmd": {
                    "type": "string",
                    "default": "python -m pytest",
                    "description": "The shell command produces coveragepy report",
                    "scope": "resource"
                },
                "python.coveragepy.run-on-file-change": {
                    "type": "boolean",
                    "default": true,
                    "description": "If true, run `python.coveragepy.cmd` automatically on start or a file change",
                    "scope": "resource"
                },
                "python.coverageView.highlight": {
                    "type": "string",
                    "default": "rgba(200,200,200,.35)",
                    "description": "Highlight color",
                    "scope": "resource"
                },
                "python.coverageView.highlightMode": {
                    "type": "string",
                    "default": "missing",
                    "description": "Mode which code is highlighted: 'covered', 'uncovered' or 'missing'(default)",
                    "enum": [
                        "covered",
                        "missing",
                        "uncovered"
                    ],
                    "scope": "resource"
                }
            }
        },
        "taskDefinitions": [{
            "type": "python-test-coverage",
            "required": [
                "task"
            ],
            "properties": {
                "task": {
                    "type": "string",
                    "description": "The python-test-coverage task to customize"
                },
                "cmd": {
                    "type": "string",
                    "default": "python -m pytest",
                    "description": "The command that runs tests and generage .coverage file"
                }
            }
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.29"
    },
    "dependencies": {
        "event-stream": "^3.3.4"
    }
}